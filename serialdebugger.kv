#:kivy 1.1.0
<Indicator>:
    canvas:
        Color:
            rgba: self.color
        Ellipse:
            pos: self.center_x , self.center_y
            size: dp(30), dp(30)


<Root>:
    console_text: console_text
    send_text: send_text
    id_commport: id_commport
    id_baudrate: id_baudrate
    id_indicator: id_indicator
    id_switch_serial: id_switch_serial
    id_add_timestamp: id_add_timestamp

    MDScreen:
        name: 'main_screen'
        MDBottomNavigation:
            selected_color_background: 'orange'
            text_color_active: 'lightgrey'

            MDBottomNavigationItem:
                name: 'settings'
                icon: 'cog'
                text: 'Настройки'
                MDLabel:
                    text: 'Serial Settings'
                    text_size: self.size
                    halign: 'left'
                    size_hint_y: 0.12
                    padding_x: '2dp'
                GridLayout:
                    cols: 2
#                    size_hint_y: 0.5
                    Label:
                        text: ''
                        size_hint_y: None
                        text_size: self.size
                        halign: 'left'
                        height: '10dp'
                        size_hint_x: 0.382
                    Label:
                        text: ''
                        size_hint_y: None
                        text_size: self.size
                        halign: 'left'
                        height: '10dp'
                        size_hint_x: 0.618

                    Label:
                        text: 'port'
                        size_hint_y: None
                        text_size: self.size
                        halign: 'left'
                        height: '30dp'
                        padding_x: '5dp'
                        size_hint_x: 0.382
                    Spinner:
                        id: id_commport
                        text: 'COM1'
                        values: []
                        text_size: self.width, None
                        size_hint_y: None
                        height: '30dp'
                        on_text: root.on_commport_change(self.text)
                        size_hint_x: 0.618
                        halign: 'center'

                    Label:
                        text: 'Скорость'
                        size_hint_y: None
                        text_size: self.size
                        halign: 'left'
                        height: '30dp'
                        padding_x: '5dp'
                        size_hint_x: 0.382
                    Spinner:
                        id: id_baudrate
                        text: '115200'
                        values: ('1200', '2400', '4800', '9600', '19200', '38400', '57600', '115200')
                        size_hint_y: None
                        height: '30dp'
                        on_text: root.on_baudrate_change(self.text)
                        size_hint_x: 0.618

                Indicator:
                    id: id_indicator
                    size_hint_x: 1

                Button:
                    id: id_switch_serial
                    size_hint_y: None
                    height: dp(50)
                    text: 'Подключиться'
                    on_release: root.switch_serial(self.text)
#                    size_hint_x: 0.618
            MDBottomNavigationItem:
                name: 'console'
                text: 'Консоль'
                icon: 'console'
                # Recieve Data
                BoxLayout:
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint_y: None
                        height: '30dp'
                        GridLayout:
                            cols: 2
                            size_hint_y: None
                            height: '30dp'
                            CheckBox:
                                size_hint_y: None
                                size_hint_x: 0.318
                                height: '16dp'
                                id: id_add_timestamp
                                active: False
                                on_active: root.on_add_timestamp_change(self.active)
                                center: self.parent.center_x - dp(16), self.parent.center_y - dp(16)
                                canvas.before:
                                    Color:
                                        rgb: 1,1,0
                                    Rectangle:
                                        pos:self.center_x-dp(8), self.center_y-dp(8)
                                        size:[dp(16),dp(16)]
                                    Color:
                                        rgb: 0.179, 0.191, 0.191
                                    Rectangle:
                                        pos:self.center_x-dp(7), self.center_y-dp(7)
                                        size:[dp(14),dp(14)]
                            Label:
                                text: 'Add timestamp'
                                size_hint_x: 0.682
                                size_hint_y: None
                                text_size: self.size
                                halign: 'left'
                                height: '30dp'
                                padding_x: '5dp'
                                size_hint_x: 0.682

                        Button:
                            size: self.parent.width/2, self.parent.height
                            size_hint: None, None
                            text: 'Очистить'
                            on_release: root.clear_recvdata()
                    BoxLayout:
                        size_hint_y: 0.85
                        TextInput:
                            id: console_text
                            text: ''
                            readonly: True
                    BoxLayout:
                        size_hint_y: 0.15
                        TextInput:
                            id: send_text
                            text: ''

                    BoxLayout:
                        size_hint_y: None
                        height: '20dp'
                        Button:
                            text: 'Отправить'
                            on_release: root.send_data()
            MDBottomNavigationItem:
                name: 'charts'
                icon: 'chart-bell-curve'
                text: 'Графики'

                MDLabel:
                    text: 'Визуализация'
                    halign: 'center'



